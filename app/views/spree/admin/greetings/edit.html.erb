<% content_for :page_actions do %>
  <% if can?(:create, Spree::Greeting) %>
    <%= button_link_to Spree.t(:new_greeting), new_object_url, { class: "btn-success", icon: 'add', id: 'admin_new_greeting' } %>
  <% end %>
  <%#= back_to_list_button(Spree::Greeting.model_name.human, admin_greetings_path) %>
<% end %>

<%= render partial: 'spree/admin/shared/greeting_tabs', locals: {current: :details} %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @greeting } %>

<%= form_for [:admin, @greeting], method: :put, html: { multipart: true } do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
